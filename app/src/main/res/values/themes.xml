<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Smartmath" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- In particular it defines the status bar color-->
        <item name="colorPrimary">@color/bars_color</item>

        <!-- Set color of default navigation panel -->
        <item name="android:navigationBarColor">@color/bars_color</item>
    </style>

    <style name="Theme.Smartmath" parent="Base.Theme.Smartmath" />

    <!--Custom styles-->
    <!--Buttons-->
    <style name="ButtonBold600" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/button_background_0</item>
        <item name="android:fontFamily">@font/poppins_bold_600</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/button_text_0</item>
    </style>

    <style name="ButtonSemibold500" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/button_background_0</item>
        <item name="android:fontFamily">@font/poppins_semibold_500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/button_text_0</item>
    </style>

    <!--Text-->
    <style name="TitleTopScreen" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_bold_600</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="TextRegular" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_medium_400</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_light</item>
    </style>

    <style name="DividerLine" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@color/black_light</item>
    </style>

    <!--EditText-->
    <style name="EditTextRegularOne" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>
</resources>